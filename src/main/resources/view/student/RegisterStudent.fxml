<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.elite.controller.RegisterStudentController">
    <children>
        <!-- Header with subtle gradient -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="100.0" width="1000.0"
                   fill="#2c3e50"
                   stroke="#34495e" strokeType="INSIDE" strokeWidth="0.0">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.1)" height="3.0" radius="3.0" width="0.0" />
            </effect>
        </Rectangle>

        <Label layoutX="350.0" layoutY="25.0" text="STUDENT REGISTRATION" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Main form container -->
        <VBox layoutX="100.0" layoutY="120.0" prefHeight="600.0" prefWidth="800.0"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40" />
            </padding>

            <children>
                <!-- Two-column form layout -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                        <RowConstraints prefHeight="40" />
                    </rowConstraints>

                    <children>
                        <!-- Registration No -->
                        <Label text="Registration No *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.columnIndex="1" />

                        <!-- First Name -->
                        <Label text="First Name *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtFirstName" prefHeight="35.0" prefWidth="300.0"
                                   promptText="Enter First Name"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <!-- Last Name -->
                        <Label text="Last Name *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtLastName" prefHeight="35.0" prefWidth="300.0"
                                   promptText="Enter Last Name"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <!-- Date of Birth -->
                        <Label text="Date of Birth *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="3">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <DatePicker prefHeight="35.0" prefWidth="300.0"
                                    style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6;"
                                    GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <!-- Contact -->
                        <Label text="Contact No *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="4">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtContact" prefHeight="35.0" prefWidth="300.0"
                                   promptText="07X XXX XXXX"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <!-- Email -->
                        <Label text="Email *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="5">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtEmail" prefHeight="35.0" prefWidth="300.0"
                                   promptText="example@domain.com"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.rowIndex="5" GridPane.columnIndex="1" />

                        <!-- Address -->
                        <Label text="Address *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="6">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtAddress" prefHeight="35.0" prefWidth="300.0"
                                   promptText="Enter your full address"
                                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6; -fx-padding: 0 10;"
                                   GridPane.rowIndex="6" GridPane.columnIndex="1" />

                        <!-- Registration Date -->
                        <Label text="Registration Date *" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="7">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <DatePicker prefHeight="35.0" prefWidth="300.0"
                                    style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #dce1e6;"
                                    GridPane.rowIndex="7" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <!-- Action buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 30 0 0 0;">
                    <children>
                        <Button fx:id="btnResetOnAction" onAction="#btnresetOnAction" text="Reset"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 10 20;"
                                prefHeight="40.0" prefWidth="100.0">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.1)" height="2.0" radius="2.0" width="0.0" />
                            </effect>
                        </Button>
                        <Button fx:id="btnRegisterOnAction" onAction="#registerStudent" text="Register"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 10 20;"
                                prefHeight="40.0" prefWidth="120.0">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.1)" height="2.0" radius="2.0" width="0.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>

                <!-- Form footer note -->
                <Label text="* indicates required fields" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-padding: 15 0 0 0;">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Status bar -->
        <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="750.0" prefHeight="50.0" prefWidth="1000.0"
              style="-fx-background-color: #ecf0f1; -fx-padding: 0 20;">
            <children>
                <Label text="Ready to register new student" style="-fx-text-fill: #7f8c8d;">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>